# Create comprehensive .gitignore in project root
cat > .gitignore << 'EOF'
# Python cache
__pycache__/
*.py[cod]
*.pyc
*.pyo
*.pyd

# Database
*.sqlite3
*.db
db.sqlite3

# Virtual Environment
.venv/
venv/
env/
ENV/

# Django
*.log
local_settings.py
media/
staticfiles/

# Flask
instance/

# IDE
.vscode/
.idea/
*.swp

# OS
.DS_Store
Thumbs.db
EOF